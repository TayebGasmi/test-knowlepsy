{
  "name": "event-management",
  "version": "1.0.0",
  "description": "Fullstack event management application",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "pnpm --filter event-management-backend dev",
    "dev:frontend": "pnpm --filter event-management-frontend dev",
    "build": "pnpm --filter event-management-backend build && pnpm --filter event-management-frontend build",
    "test": "pnpm --filter event-management-backend test",
    "docker:up": "cd backend/local-config && docker-compose up -d",
    "docker:down": "cd backend/local-config && docker-compose down",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
